<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cliente_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lacf.luisadrian.vendexpress.ClienteEdit">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="ID"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content" />

        <EditText
            android:text="ID"
            android:textColor="@color/colorAccent"
            android:enabled="false"
            android:id="@+id/lbl_detalles_cliente_id"
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="Nombre"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content" />

        <EditText
            android:text="Nombre"
            android:enabled="false"
            android:textColor="@color/colorAccent"
            android:id="@+id/lbl_detalles_cliente_nombre"
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="Correo electrónico"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content" />

        <EditText
            android:text="Correo electrónico"
            android:textColor="@color/colorAccent"
            android:id="@+id/lbl_detalles_cliente_correo"
            android:layout_width="0dp"
            android:enabled="false"
            android:layout_weight=".75"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="Número telefónico"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content" />

        <EditText
            android:text="Número"
            android:textColor="@color/colorAccent"
            android:id="@+id/lbl_detalles_cliente_telefono"
            android:layout_width="0dp"
            android:enabled="false"
            android:layout_weight=".75"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="Domicilio"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content" />

        <EditText
            android:text="Domicilio"
            android:enabled="false"
            android:textColor="@color/colorAccent"
            android:id="@+id/lbl_detalles_cliente_domicilio"
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/btn_editar_cliente"
        android:text="Editar cliente"
        android:textColor="@color/colorAccentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/btn_eliminar_cliente"
        android:text="Eliminar cliente"
        android:textColor="@color/colorAccentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"/>
</LinearLayout>
